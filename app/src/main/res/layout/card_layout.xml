<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:elevation="6dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/card_recipe_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/imageview_border"
            android:src="@drawable/ic_trending_foreground"
            android:padding="4dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/card_recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_recipe_img"
            />

        <TextView
            android:id="@+id/card_recipe_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Description"
            android:textSize="16sp"
            android:textColor="#504B4B"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/card_recipe_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/card_recipe_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Type"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="4dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/card_recipe_img"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>